
public class quaternion {
	
	private double w;
	private double x;
	private double y;
	private double z;
	
	public quaternion (double w, double x, double y, double z){
		this.w = w;
		this.x = x;
		this.y = y;
		this.z = z;
	}

	public double getW() {
		return w;
	}

	public double getX() {
		return x;
	}

	public double getY() {
		return y;
	}

	public double getZ() {
		return z;
	}
	


}



class quaternionsOperations{
	//transforma de vetor angulo para quaternion
	public double[] axisAngleToQuaternion (double [] vector, double theta){
		double [] toReturn = new double [4];
		toReturn[0] = Math.cos(theta/2);
		toReturn[1] = vector[0] * Math.sin(theta/2);
		toReturn[2] = vector[1] * Math.sin(theta/2);
		toReturn[3] = vector[2] * Math.sin(theta/2);
		return toReturn;
	}
}
